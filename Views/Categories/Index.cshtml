@model IEnumerable<GeoMarker.Models.Category>

@{
    ViewData["Title"] = "Marker Categories : GeoMarker";
    ViewData["Heading"] = "Categories";
    ViewData["Content"] = "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Quisque sollicitudin lorem ante, eget rutrum ligula sagittis eu. Vestibulum suscipit orci a nunc fringilla maximus.";
}


<div class="p-4">
    <table class="table table-hover">
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                        @if (User.IsInRole("Administrator"))
                   {
                            <a asp-action="Edit" asp-route-id="@item.CategoryId" class="p-1 text-decoration-none">Edit<i class="fa-solid fa-pencil"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.CategoryId" class="p-1 text-decoration-none">Delete<i class="fa-regular fa-trash-can"></i></a>
                   }
                    <a asp-action="Category" asp-controller="Markers" asp-route-id="@item.CategoryId" class="p-1 text-decoration-none">View Category<i class="fa-solid fa-circle-arrow-right"></i></a>      
            </td>
        </tr>
}
    </tbody>
</table>
</div>