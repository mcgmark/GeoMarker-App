@model GeoMarker.Models.Category

@{
    ViewData["Title"] = "Delete Category : GeoMarker";
    ViewData["Heading"] = "Delete Category";
    ViewData["Content"] = "Delete category this cann't be reversed.";
}

<div class="bg-white p-4 mb-3 shadow-sm">
    
    <p class="fs-4">@Html.DisplayFor(model => model.Name)</p>
 
    <div class="hstack">
        <div class="text-white bg-primary p-2 rounded me-1">
        <form asp-action="Delete">     
                <input type="hidden" asp-for="CategoryId" />
                <i class="fa-regular fa-trash-can"></i><input type="submit" value="Delete" class="btn p-0 text-white" />
        </form>
        </div>
        <div class="bg-primary p-2 rounded me-1">
            <a class="text-white text-decoration-none" asp-action="Details" asp-route-id="@Model?.CategoryId"><i class="fa-regular fa-rectangle-xmark"></i>Cancel</a>
        </div>
    </div>
</div>