@model GeoMarker.Models.Category

@{
    ViewData["Title"] = "Create Category : GeoMarker";
    ViewData["Heading"] = "Create Category";
    ViewData["Content"] = "Start a new marker category.";
}

<div class="p-5 pb-5 bg-white mb-3 shadow-sm">
    <div>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <span class="bg-primary p-2 rounded me-1 d-block">
                <i class="fa-solid fa-check"></i><input type="submit" value="Create" class="btn" />
            </span>
                <div class="border-primary"><a class="p-2 display-7 text-white bg-primary p-2 rounded me-1" asp-action="Index"><i class="fa-regular fa-rectangle-xmark"></i>Cancel</a></div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
