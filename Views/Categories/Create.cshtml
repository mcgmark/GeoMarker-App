@model GeoMarker.Models.Category

@{
    ViewData["Title"] = "Create Category : GeoMarker";
    ViewData["Heading"] = "Create Category";
    ViewData["Content"] = "Start a new marker category.";
}

<div class="row col-8 offset-1 p-2 mt-4 pb-5">
    <div>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            
            <div class="d-flex align-items-center justify-content-end p-2 mb-4 med-gray gm-lower">
                <div class="border-primary"><a class="p-2 display-7 text-danger" asp-action="Index"><i class="fa-regular fa-rectangle-xmark"></i>Cancel</a></div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
