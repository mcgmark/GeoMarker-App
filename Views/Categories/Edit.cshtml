@model GeoMarker.Models.Category

@{
    ViewData["Title"] = "Edit Category : GeoMarker";
    ViewData["Heading"] = "Edit Category";
    ViewData["Content"] = "Edit the name of your category.";
}

<div class="bg-white p-4 shadow-sm">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CategoryId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="d-flex mt-3">
                    <span class="text-white bg-primary p-2 rounded me-1"><i class="fa-solid fa-check"></i><input type="submit" value="Save" class="btn p-0 text-white" /></span>
                    <a class="text-white bg-primary p-2 rounded text-decoration-none me-1" asp-action="Index"><i class="fa-regular fa-rectangle-xmark"></i>Cancel</a>
             </div>
        </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
