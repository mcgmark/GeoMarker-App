@model GeoMarker.Models.Category

@{
    ViewData["Title"] = "Edit Category : GeoMarker";
    ViewData["Heading"] = "Edit Category";
    ViewData["Content"] = "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Quisque sollicitudin lorem ante, eget rutrum ligula sagittis eu. Vestibulum suscipit orci a nunc fringilla maximus.";
}

<div class="mb-4 pb-5">
    <div class="">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CategoryId" />
            <div class="form-group p-4">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mt-3 p-2 d-flex justify-content-around bg-orange">
                    <span class=" text-white"><i class="fa-solid fa-check"></i><input type="submit" value="Save" class="btn p-0 text-white" /></span>
                    <a class="text-white" asp-action="Index"><i class="fa-regular fa-rectangle-xmark"></i>Cancel</a>
                </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
