@model GeoMarker.Models.Marker

@{
    ViewData["Title"] = "Marker Details : GeoMarker";
    ViewData["Heading"] = @Model.Title;
    ViewData["Content"] = @Model.Description;

}

<div class="flex-grow-1 bg-success d-flex flex-column justify-content-between">
    <div>
    @if (Model.Photo != null)
    {
        <img class="card-img-top-large" src="~/img/markers/@Model.Photo" alt="Marker Photo" />
    }
    else
    {
        <img class="card-img-top-large" src="~/img/markers/placeholder.png" alt="Marker Photo" />
    }
    </div>
    <div>
    <ul class="list-group list-group-flush flex-grow-1">  
        <li id="category" class="list-group-item">@Model.Category.Name</li>
        <li id="address" class="list-group-item">@Model.Address</li>
        <li id="latitude" class="list-group-item">@Model.Latitude</li>
        <li id="longitude" class="list-group-item">@Model.Longitude</li>
        <li id="username" class="list-group-item">@Model.UserName</li>
        <li id="createddate" class="list-group-item">@Model.CreatedDate</li>
    </ul>
    </div>
    <div class="bg-orange p-2 d-flex justify-content-around">
        @if (User.Identity?.Name == Model.UserName || User.IsInRole("Administrator"))
        {
            <a class="text-white text-decoration-none" asp-action="Edit" asp-route-id="@Model?.MarkerId"><i class="fa-solid fa-pencil"></i>Edit</a>
            <a class="text-white text-decoration-none" asp-action="Delete" asp-route-id="@Model?.MarkerId">Delete<i class="fa-regular fa-trash-can"></i></a>
        }
        <a class="text-white text-decoration-none" asp-action="Index"><i class="fa-solid fa-map-location"></i>Back to List</a>
    </div>
</div>
