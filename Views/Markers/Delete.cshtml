@model GeoMarker.Models.Marker

@{
    ViewData["Title"] = "Delete Marker : GeoMarker";
    ViewData["Heading"] = @Model.Title;
    ViewData["Content"] = @Model.Description;
}

<div class="mb-4">
    @if (Model.Photo != null)
    {
        <img class="card-img-top-large" src="~/img/markers/@Model.Photo" alt="Marker Photo" />
    }
    else
    {
        <img class="card-img-top-large" src="~/img/markers/placeholder.png" alt="Marker Photo" />
    }
    <ul class="list-group list-group-flush">
        <li class="list-group-item">@Model.Category.Name</li>
        <li class="list-group-item">@Model.Address</li>
        <li id="latitude" class="list-group-item">@Model.Latitude</li>
        <li id="longitude" class="list-group-item">@Model.Longitude</li>
        <li class="list-group-item">@Model.UserName</li>
        <li class="list-group-item">@Model.CreatedDate</li>
    </ul>
    <div class="p-2 bg-orange d-flex justify-content-around">
        <form asp-action="Delete">
            <span>
                <input type="hidden" asp-for="MarkerId" />
                <span class="text-white"><i class="fa-regular fa-trash-can"></i><input type="submit" value="Delete" class="btn p-0 text-white" /></span>
            </span>
        </form>

        <div>
            <a class="text-white" asp-action="Details" asp-route-id="@Model?.MarkerId"><i class="fa-regular fa-rectangle-xmark"></i>Cancel</a>
        </div>
    </div>
</div>