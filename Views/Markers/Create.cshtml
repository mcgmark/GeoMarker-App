@model GeoMarker.Models.Marker

@{
    ViewData["Title"] = "Create Marker : GeoMarker";
    ViewData["Heading"] = "Create Marker";
    ViewData["Content"] = "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Quisque sollicitudin lorem ante, eget rutrum ligula sagittis eu. Vestibulum suscipit orci a nunc fringilla maximus.";
}

<div class="mb-5 p-4 pb-5">
    <div>
            <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                
                    <input asp-for="UserName" type="hidden" class="form-control" value="@User.Identity?.Name" readonly/>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" id="title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" class ="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Photo" class="control-label"></label>
                    <input asp-for="Photo" class="form-control" type="file" />
                <span asp-validation-for="Photo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <div id="searchBoxContainer"><input asp-for="Address" class="form-control" id="address" /></div>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Latitude" class="control-label"></label>
                <input asp-for="Latitude" class="form-control"  id="latitude"/>
                <span asp-validation-for="Latitude" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Longitude" class="control-label"></label>
                <input asp-for="Longitude" class="form-control" id="longitude" />
                <span asp-validation-for="Longitude" class="text-danger"></span>
            </div>
            <div><a class="text-blue" href="#" id="lookupButton">Reverse Lookup</a></div>
            <div><a href="#" class="text-blue disabled" data-toggle="tooltip" data-placement="top" title="Disabled: Requires HTTPS" id="currentButton">Get Current Location</a></div>
                <div><a href="#" class="text-blue" id="resetAddress">Delete Last Marker</a></div>
            <div class="form-group">
             
                    <input asp-for="CreatedDate" class="form-control" value="@ViewData["CurrentDate"]" type="hidden" />
                <span asp-validation-for="CreatedDate" class="text-danger"></span>
            </div>
            <div class="mt-3 p-2 d-flex justify-content-around bg-orange">
                <span class=" text-white"><i class="fa-solid fa-check"></i><input type="submit" value="Create" class="btn p-0 text-white" /></span>
                <a class="text-white text-decoration-none" asp-action="Index"><i class="fa-regular fa-rectangle-xmark"></i>Cancel</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
