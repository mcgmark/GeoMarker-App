@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav pe-4">
@if (SignInManager.IsSignedIn(User))
{
 
        <li class="nav-item">
            <a class="nav-link text-white fw-bold small" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><i class="fa-solid fa-gears text-warning"></i>@User.Identity?.Name</a>
         </li>
        <li class="nav-item">
             <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link text-white bg-blue border-warning border rounded p-2 text-center fw-bold small">Logout</button>
             </form>
        </li>
}
else
{
    
    <li class="nav-item me-2 mb-1">
        <a class="nav-link text-white bg-blue border border-warning rounded p-1 text-center fw-bold small" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item me-2 mb-1">
            <a class="nav-link text-white bg-blue border-warning border rounded p-1 text-center fw-bold small" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
   
}
</ul>
